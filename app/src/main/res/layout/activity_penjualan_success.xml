<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/penjualanSuccessRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Penjualan.PenjualanSuccessActivity">

    <LinearLayout
        android:id="@+id/penjualanSuccessLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/successNoteCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successCustomerName"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pembelianSuccessCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/successNoteTotalPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successTotalPrice"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pembelianSuccessTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/penjualanSuccessRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/penjualanSuccessButtonLinearLayout"
        android:layout_below="@+id/penjualanSuccessLinearLayout">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/penjualanSuccessButtonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/penjualanSuccessCheckInvoiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cekInvoice" />

        <Button
            android:id="@+id/penjualanSuccessMainMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuUtama" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />

</RelativeLayout>