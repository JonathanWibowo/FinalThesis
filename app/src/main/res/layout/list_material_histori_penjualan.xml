<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/list_layout">

            <TextView
                android:id="@+id/historiPenjualanCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/namaPembeliText"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/historiPenjualanKeteranganText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/historiPenjualanCustomerName"
                android:layout_marginTop="8dp"
                android:text="@string/keteranganText"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/historiPenjualanCustomerInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/historiPenjualanKeteranganText"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>