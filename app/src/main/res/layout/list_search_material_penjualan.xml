<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchMaterialPenjualanLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/list_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/searchResultMaterialName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/materialName"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchResultMaterialDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchResultMaterialName"
                android:layout_marginTop="8dp"
                android:text="@string/materialDesc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/searchResultMaterialGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchResultMaterialDescription"
                android:layout_marginTop="8dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:text="@string/materialGroup" />

            <TextView
                android:id="@+id/searchResultMaterialQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchResultMaterialGroup"
                android:layout_marginTop="8dp"
                android:text="@string/materialQuantity"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/searchResultRupiahText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchResultMaterialQuantity"
                android:layout_marginTop="8dp"
                android:text="@string/rp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/searchResultMaterialPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/searchResultRupiahText"
                android:layout_toEndOf="@+id/searchResultRupiahText"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:text="@string/materialPrice" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>